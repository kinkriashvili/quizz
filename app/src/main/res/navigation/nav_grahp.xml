<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_grahp"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.a1.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_dashboardFragment2"
            app:destination="@id/dashboardFragment" />
    </fragment>


    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.example.a1.fragments.DashboardFragment"
        android:label="DashboardFragment"
        tools:layout="@layout/fragment_dashboard">

        <argument
            android:name="amount"
            app:argType="integer"
            android:defaultValue="-1"/>


    </fragment>


    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.a1.fragments.NotificationFragment"
        android:label="NotificationFragment"
        tools:layout="@layout/fragment_notification"/>
    <fragment
        android:id="@+id/sweetFragment"
        android:name="com.example.a1.fragments.SweetFragment"
        android:label="SweetFragment"
        tools:layout="@layout/fragment_sweet"/>


</navigation>